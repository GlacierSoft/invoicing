		<!-- 当项目变化的时自动编译-->
		<defaultGoal>compiler</defaultGoal>
		<!-- pluginManagement 中定义的plugin，所有子项目都会继承 -->
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.1</version>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
						<encoding>UTF-8</encoding>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
